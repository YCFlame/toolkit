#! /usr/bin/env python
# coding: utf-8

import os
import sys
import inspect


if __name__ == '__main__':
    if len(sys.argv) != 2:
        print 'Usage: module-path module_name'
    else:
        name = sys.argv[1]
        try:
            module = __import__(name)
            print os.path.dirname(inspect.getfile(module))
        except ImportError:
            print 'No such module named %s' % name
